/* Clipboard Config - Clipboard */

@import "~/.config/rofi/config.rasi"  

/* ---- Window ---- */
window {
  width: inherit;
  height: inherit;
}

/* ---- Configuration ---- */
configuration {
    font: "JetBrainsMono Nerd Font 10";
}

/* ---- Mainbox ---- */
mainbox {
  children: [ "message", "listview"];
  padding: 10px;
}

/* ---- Listview (–°–ï–¢–ö–ê) ---- */
listview {
  columns: 4;   /* –î–≤–µ –∫–æ–ª–æ–Ω–∫–∏ (–∫–∞—Ä—Ç–æ—á–∫–∏) */
  lines: 3;     /* –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ —Ä—è–¥–æ–≤ */
  spacing: 5px; /* –†–∞—Å—Å—Ç–æ—è–Ω–∏–µ –º–µ–∂–¥—É –∫–∞—Ä—Ç–æ—á–∫–∞–º–∏ */
  cycle: true;
  fixed-height: false;
}

/* ---- Elements (–ö–ê–†–¢–û–ß–ö–ò) ---- */
element {
  orientation: vertical; /* –ö–∞—Ä—Ç–∏–Ω–∫–∞ —Å–≤–µ—Ä—Ö—É, —Ç–µ–∫—Å—Ç —Å–Ω–∏–∑—É */
  padding: 10px;
  spacing: 1px;
  border-radius: 10px;
}

/* –ö–∞—Ä—Ç–∏–Ω–∫–∞ –≤ –∫–∞—Ä—Ç–æ—á–∫–µ */
element-icon {
  size: 10em;     /* –ö—Ä—É–ø–Ω–∞—è –∫–∞—Ä—Ç–∏–Ω–∫–∞ */
  horizontal-align: 0.5; /* –¶–µ–Ω—Ç—Ä–∏—Ä–æ–≤–∞–Ω–∏–µ –ø–æ –≥–æ—Ä–∏–∑–æ–Ω—Ç–∞–ª–∏ */
  vertical-align: 0.5;
}

/* –¢–µ–∫—Å—Ç –≤ –∫–∞—Ä—Ç–æ—á–∫–µ */
element-text {
  vertical-align: 0.5;
  horizontal-align: 0.5; /* –¢–µ–∫—Å—Ç –ø–æ —Ü–µ–Ω—Ç—Ä—É */
}